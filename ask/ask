#!/usr/bin/env python3
import os
import requests
import json
import readline

API_KEY = os.getenv("DEEPSEEK_API_KEY", "")
API_URL = "https://api.deepseek.com/v1/chat/completions"
MODEL_NAME = "deepseek-chat"

def chat_with_deepseek(prompt, conversation_history=None):
    """
    å‘DeepSeek APIå‘é€è¯·æ±‚å¹¶è·å–å“åº”
    """
    if not API_KEY:
        raise ValueError("âŒ æœªè®¾ç½®DEEPSEEK_API_KEYç¯å¢ƒå˜é‡ï¼")
    
    headers = {
        "Authorization": f"Bearer {API_KEY}",
        "Content-Type": "application/json"
    }
    
    # æ„å»ºå¯¹è¯å†å²ï¼ˆåŒ…å«ä¹‹å‰çš„å¯¹è¯ä¸Šä¸‹æ–‡ï¼‰
    messages = conversation_history or []
    messages.append({"role": "user", "content": prompt})
    
    payload = {
        "model": MODEL_NAME,
        "messages": messages,
        "temperature": 0.7,
        "max_tokens": 4096,
        "top_p": 1,
        "stream": False
    }
    
    try:
        response = requests.post(API_URL, headers=headers, json=payload)
        response.raise_for_status()
        result = response.json()
        
        ai_response = result["choices"][0]["message"]["content"]
        messages.append({"role": "assistant", "content": ai_response})
        
        return ai_response.strip(), messages
        
    except requests.exceptions.RequestException as e:
        return f"âš ï¸ è¯·æ±‚å¤±è´¥: {str(e)}", messages
    except (KeyError, IndexError) as e:
        return f"âš ï¸ è§£æå“åº”å¤±è´¥: {str(e)}", messages

def main():
    print("=" * 50)
    print(f"A.S.K.")
    print("æ¨¡å‹: {MODEL_NAME}")
    print("è¾“å…¥ 'exit' é€€å‡ºï¼Œ'clear' æ¸…é™¤å¯¹è¯å†å²")
    print("=" * 50)
    
    conversation_history = []
    
    while True:
        try:
            user_input = input("\nğŸ‘¤ ä½ : ").strip()
            
            if not user_input:
                continue
                
            if user_input.lower() in ["exit", "quit"]:
                print("\nğŸ›‘ ä¼šè¯ç»“æŸ")
                break
                
            if user_input.lower() == "clear":
                conversation_history = []
                print("\nğŸ§¹ å¯¹è¯å†å²å·²æ¸…é™¤")
                continue
                
            print("\nğŸ¤– æ€è€ƒä¸­", end="", flush=True)
            
            response, conversation_history = chat_with_deepseek(user_input, conversation_history)
            
            print(f"\rğŸ¤– DeepSeek: {response}")
            
        except KeyboardInterrupt:
            print("\nğŸ›‘ ä¼šè¯ç»“æŸ")
            break

if __name__ == "__main__":
    if not API_KEY:
        print("âŒ é”™è¯¯: è¯·è®¾ç½®DEEPSEEK_API_KEYç¯å¢ƒå˜é‡")
        print("ç¤ºä¾‹: export DEEPSEEK_API_KEY='your_api_key_here'")
        exit(1)
    main()
